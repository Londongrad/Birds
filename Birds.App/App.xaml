<Application
    x:Class="Birds.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Birds.UI.Converters;assembly=Birds.UI"
    xmlns:local="clr-namespace:Birds.App"
    xmlns:v="clr-namespace:Birds.UI.Views.UserControls;assembly=Birds.UI"
    xmlns:vm="clr-namespace:Birds.UI.ViewModels;assembly=Birds.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Global Themes -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/GlobalSettings.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/Combobox.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/ScrollViewer.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/Validation.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/ViewsBorder.xaml" />

                <!-- Bird List View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdListView/ActionButtons.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdListView/ComboBoxSortFilter.xaml" />

                <!-- Add Bird View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/AddBirdButton.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/DatePicker.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/TextBlock.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/TextBox.xaml" />

                <!-- Bird Statistics View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdStatisticsView/TextBlock.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdStatisticsView/StatsBirdButton.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdStatisticsView/ComboBoxYears.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdStatisticsView/MetricCardBorder.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdStatisticsView/TabControl.xaml" />

                <!-- Main Window View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/MainWindowThemes/MenuButtons.xaml" />

                <!-- Unused themes -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/TextBlockOnBirdsTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/DeleteButtonTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/TextBoxBirdsTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/IconsForToast.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Конвертеры -->
            <conv:DateOnlyToDateTimeConverter x:Key="DateOnlyConverter" />
            <conv:InverseBoolConverter x:Key="BoolConverter" />
            <conv:MultiBoolToVisibilityConverter x:Key="MultiBoolToVisibilityConverter" />
            <conv:BirdVmConverter
                x:Key="BirdVmConverter"
                Factory="{x:Null}" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

            <!--View models <-> Views-->
            <DataTemplate DataType="{x:Type vm:AddBirdViewModel}">
                <v:AddBirdView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BirdListViewModel}">
                <v:BirdsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BirdStatisticsViewModel}">
                <v:BirdStatisticsView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
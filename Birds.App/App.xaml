<Application
    x:Class="Birds.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Birds.UI.Converters;assembly=Birds.UI"
    xmlns:local="clr-namespace:Birds.App"
    xmlns:v="clr-namespace:Birds.UI.Views.UserControls;assembly=Birds.UI"
    xmlns:vm="clr-namespace:Birds.UI.ViewModels;assembly=Birds.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Global Themes -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/GlobalSettings.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/ComboboxTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/ScrollViewerTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/GlobalThemes/ValidationStyles.xaml" />

                <!-- Bird List View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/BirdListView/ActionButtons.xaml" />

                <!-- Add Bird View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/AddBirdButtonTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/ComboBoxSortFilter.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/DatePickerOnAddTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/TextBlockOnAddTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/AddBirdView/TextBoxOnAddTheme.xaml" />

                <!-- Bird Statistics View -->

                <!-- Main Window View -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/MainWindowThemes/MenuButtonTheme.xaml" />

                <!-- Unused themes -->
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/TextBlockOnBirdsTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/DeleteButtonTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/TextBoxBirdsTheme.xaml" />
                <ResourceDictionary Source="/Birds.UI;component/wwwroot/Themes/IconsForToast.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Конвертеры -->
            <conv:DateOnlyToDateTimeConverter x:Key="DateOnlyConverter" />
            <conv:InverseBoolConverter x:Key="BoolConverter" />
            <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

            <!--View models <-> Views-->
            <DataTemplate DataType="{x:Type vm:AddBirdViewModel}">
                <v:AddBirdView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BirdListViewModel}">
                <v:BirdsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BirdStatisticsViewModel}">
                <v:BirdStatisticsView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
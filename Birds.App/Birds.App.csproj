<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>..\Birds.UI\wwwroot\Images\bird.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="birds.db-shm" />
		<None Remove="birds.db-wal" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.9" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Birds.Infrastructure\Birds.Infrastructure.csproj" />
		<ProjectReference Include="..\Birds.UI\Birds.UI.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="birds.db">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>

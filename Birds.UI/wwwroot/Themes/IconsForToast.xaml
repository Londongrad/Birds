<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Иконки как UIElement -->
    <Image
        x:Key="SuccessIcon"
        Width="16"
        Height="16"
        Source="pack://application:,,,/Birds.UI;component/wwwroot/Images/success.png" />
    <Image
        x:Key="ErrorIcon"
        Width="16"
        Height="16"
        Source="pack://application:,,,/Birds.UI;component/wwwroot/Images/error.png" />
    <Image
        x:Key="WarningIcon"
        Width="16"
        Height="16"
        Source="pack://application:,,,/Birds.UI;component/wwwroot/Images/warning.png" />
    <Image
        x:Key="InfoIcon"
        Width="16"
        Height="16"
        Source="pack://application:,,,/Birds.UI;component/wwwroot/Images/info.png" />

    <!-- Стиль текста уведомления -->
    <Style
        x:Key="NotificationText"
        TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Кнопка закрытия уведомления -->
    <Style
        x:Key="NotificationCloseButton"
        TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="4"
                        Background="Transparent">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="✖" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Контейнер уведомления / фон уведомления -->
    <Style
        x:Key="NotificationView"
        TargetType="Border">
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Background" Value="#333333" />
    </Style>

    <!-- Можно добавить стиль заголовка (если используется) -->
    <Style
        x:Key="NotificationTitle"
        TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

</ResourceDictionary>
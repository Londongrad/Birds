<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Базовый стиль для квадратной кнопки -->
    <Style
        x:Key="ActionButtonBase"
        TargetType="Button">
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="8">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Opacity" Value="0.8" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Кнопка редактирования -->
    <Style
        x:Key="EditButtonStyle"
        BasedOn="{StaticResource ActionButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="#3A3B6D" />
        <Setter Property="Content" Value="✎" />
        <Setter Property="Margin" Value="0,0,5,0" />
    </Style>

    <!-- Кнопка удаления -->
    <Style
        x:Key="DeleteButtonStyle"
        BasedOn="{StaticResource ActionButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="#7A2F2F" />
        <Setter Property="Content" Value="🗑" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>

    <!-- Кнопка подтверждения -->
    <Style
        x:Key="ConfirmButtonStyle"
        BasedOn="{StaticResource ActionButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="LimeGreen" />
        <Setter Property="Content" Value="✔" />
        <Setter Property="Margin" Value="0,0,5,0" />
    </Style>

    <!-- Кнопка отмены -->
    <Style
        x:Key="CancelButtonStyle"
        BasedOn="{StaticResource ActionButtonBase}"
        TargetType="Button">
        <Setter Property="Background" Value="DimGray" />
        <Setter Property="Content" Value="✖" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>

    <!-- Шаблон для обычных кнопок -->
    <DataTemplate x:Key="NormalButtonsTemplate">
        <StackPanel
            Orientation="Horizontal"
            RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TranslateTransform Y="0" />
            </StackPanel.RenderTransform>

            <Button
                Command="{Binding EditCommand}"
                Style="{StaticResource EditButtonStyle}" />
            <Button
                Command="{Binding AskDeleteCommand}"
                Style="{StaticResource DeleteButtonStyle}" />
        </StackPanel>
    </DataTemplate>

    <!-- Шаблон для кнопок подтверждения -->
    <DataTemplate x:Key="ConfirmButtonsTemplate">
        <StackPanel
            Orientation="Horizontal"
            RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TranslateTransform Y="0" />
            </StackPanel.RenderTransform>

            <Button
                Command="{Binding DeleteCommand}"
                Style="{StaticResource ConfirmButtonStyle}" />
            <Button
                Command="{Binding CancelDeleteCommand}"
                Style="{StaticResource CancelButtonStyle}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================================== -->
    <!-- Современный тумблер в стиле Switch -->
    <!-- =========================================== -->

    <Style
        x:Key="ModernToggleSwitch"
        TargetType="ToggleButton">
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Background" Value="#444" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid
                        x:Name="RootGrid"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}">
                        <!-- Фон -->
                        <Border
                            x:Name="SwitchBackground"
                            Background="{TemplateBinding Background}"
                            CornerRadius="14"
                            Opacity="0.8" />

                        <!-- Круглый переключатель -->
                        <Border
                            x:Name="Thumb"
                            Width="22"
                            Height="22"
                            Margin="3,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="White"
                            CornerRadius="11"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="ThumbTransform" X="0" />
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="4"
                                    Opacity="0.3"
                                    ShadowDepth="1"
                                    Color="#000" />
                            </Border.Effect>
                        </Border>
                    </Grid>

                    <!-- Анимации -->
                    <ControlTemplate.Triggers>

                        <!-- Состояние Checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Цвет фона -->
                                        <ColorAnimation
                                            Storyboard.TargetName="SwitchBackground"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#2ECC71"
                                            Duration="0:0:0.2" />
                                        <!-- Позиция круга -->
                                        <DoubleAnimation
                                            Storyboard.TargetName="ThumbTransform"
                                            Storyboard.TargetProperty="X"
                                            To="22"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Цвет фона обратно -->
                                        <ColorAnimation
                                            Storyboard.TargetName="SwitchBackground"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#E74C3C"
                                            Duration="0:0:0.2" />
                                        <!-- Позиция круга обратно -->
                                        <DoubleAnimation
                                            Storyboard.TargetName="ThumbTransform"
                                            Storyboard.TargetProperty="X"
                                            To="0"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Состояние Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="SwitchBackground" Property="Opacity" Value="1" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

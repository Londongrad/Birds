<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================================== -->
    <!-- Glowing breathing indicator for bird status -->
    <!-- =========================================== -->
    <Style
        x:Key="GlowingPulseIndicator"
        TargetType="Ellipse">

        <!-- Base settings -->
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,10,0" />

        <!-- Main fill -->
        <Setter Property="Fill" Value="{Binding IsAlive, Converter={StaticResource BoolToColorConverter}}" />

        <!-- Default glow effect -->
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="6"
                    Opacity="0.8"
                    ShadowDepth="0"
                    Color="LimeGreen" />
            </Setter.Value>
        </Setter>

        <!-- Triggers -->
        <Style.Triggers>

            <!-- Change glow color when status changes -->
            <DataTrigger
                Binding="{Binding IsAlive}"
                Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="6"
                            Opacity="0.8"
                            ShadowDepth="0"
                            Color="LimeGreen" />
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger
                Binding="{Binding IsAlive}"
                Value="False">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="6"
                            Opacity="0.8"
                            ShadowDepth="0"
                            Color="IndianRed" />
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <!-- Breathing animation -->
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard
                        AutoReverse="True"
                        RepeatBehavior="Forever">
                        <DoubleAnimation
                            Storyboard.TargetProperty="(Effect).BlurRadius"
                            From="5"
                            To="10"
                            Duration="0:0:1.5" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

        </Style.Triggers>
    </Style>
</ResourceDictionary>
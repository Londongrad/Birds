<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =========================================== -->
    <!--      Дышащий индикатор статуса птицы       -->
    <!-- =========================================== -->
    <Style x:Key="GlowingPulseIndicator"
           TargetType="Ellipse">
        <!-- Базовые параметры -->
        <Setter Property="Width"
                Value="12" />
        <Setter Property="Height"
                Value="12" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,0,10,0" />

        <!-- Основная заливка -->
        <Setter Property="Fill"
                Value="{Binding IsAlive, Converter={StaticResource BoolToColorConverter}}" />

        <!-- Эффект свечения по умолчанию -->
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="6"
                                  ShadowDepth="0"
                                  Opacity="0.8"
                                  Color="LimeGreen" />
            </Setter.Value>
        </Setter>

        <!-- Триггеры -->
        <Style.Triggers>

            <!-- Изменение цвета эффекта при смене состояния -->
            <DataTrigger Binding="{Binding IsAlive}"
                         Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="6"
                                          ShadowDepth="0"
                                          Opacity="0.8"
                                          Color="LimeGreen" />
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding IsAlive}"
                         Value="False">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="6"
                                          ShadowDepth="0"
                                          Opacity="0.8"
                                          Color="IndianRed" />
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <!-- Анимация дыхания -->
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever"
                                AutoReverse="True">
                        <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                                         From="5"
                                         To="10"
                                         Duration="0:0:1.5" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

        </Style.Triggers>
    </Style>
</ResourceDictionary>

<UserControl
    x:Class="Birds.UI.Views.UserControls.AddBirdView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Birds.UI.Views.Helpers"
    xmlns:local="clr-namespace:Birds.UI.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Birds.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AddBirdViewModel}"
    d:DesignHeight="500"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Border Style="{StaticResource ViewsBorder}">
        <StackPanel Margin="20">
            <TextBlock
                Style="{StaticResource TextBlockAdd}"
                Text="Bird's type" />

            <ComboBox
                IsEditable="False"
                ItemsSource="{Binding BirdNames}"
                SelectedItem="{Binding SelectedBirdName,
                                       Mode=TwoWay,
                                       ValidatesOnNotifyDataErrors=True,
                                       UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource ComboBox}" />

            <TextBlock
                Style="{StaticResource TextBlockAdd}"
                Text="Description" />

            <TextBox
                Style="{StaticResource TextBoxAdd}"
                Text="{Binding Description,
                               Mode=TwoWay,
                               ValidatesOnNotifyDataErrors=True,
                               UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Style="{StaticResource TextBlockAdd}"
                Text="Arrival" />

            <DatePicker
                CalendarStyle="{DynamicResource DarkCalendarStyle}"
                SelectedDate="{Binding Arrival,
                                       Mode=TwoWay,
                                       Converter={StaticResource DateOnlyConverter},
                                       ValidatesOnNotifyDataErrors=True,
                                       UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource DatePickerAdd}" />

            <Button
                Command="{Binding SaveCommand}"
                Content="Save the bird"
                Style="{StaticResource AddBirdButton}" />
        </StackPanel>
    </Border>
</UserControl>
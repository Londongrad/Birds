<UserControl x:Class="Birds.UI.Views.UserControls.AddBirdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:Birds.UI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AddBirdViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <StackPanel>
            <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                       Text="Bird's type" />

            <ComboBox ItemsSource="{Binding BirdNames}"
                      SelectedValue="{Binding SelectedBirdName}"
                      IsEditable="False">
            </ComboBox>

            <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                       Text="Description" />

            <TextBox Style="{DynamicResource TextBoxOnAddStyle}"
                     Text="{Binding Description}" />


            <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                       Text="Arrival" />

            <TextBox Style="{DynamicResource TextBoxOnAddStyle}"
                     Text="{Binding Arrival, 
                            ConverterCulture=ru-ru}" />

            <Button Content="Save the bird"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding}"
                    Style="{StaticResource AddBirdButton}" />
        </StackPanel>
    </StackPanel>
</UserControl>

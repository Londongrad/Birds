<UserControl x:Class="Birds.UI.Views.UserControls.AddBirdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:Birds.UI.ViewModels" 
             xmlns:local="clr-namespace:Birds.UI.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:AddBirdViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">

    <Border Background="#252535" CornerRadius="20" Padding="20" Margin="20">
        <StackPanel Margin="20">
            <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                       Text="Bird's type" />

            <ComboBox ItemsSource="{Binding BirdNames}"
                      SelectedValue="{Binding SelectedBirdName}"
                      IsEditable="False">
            </ComboBox>

            <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                       Text="Description" />

            <TextBox Style="{DynamicResource TextBoxOnAddStyle}"
                     Text="{Binding Description}" />


            <TextBlock Style="{DynamicResource TextBlockOnAddStyle}"
                       Text="Arrival" />

            <DatePicker Style="{DynamicResource DatePickerOnAddStyle}" 
                        SelectedDate="{Binding Arrival, Converter={StaticResource DateOnlyConverter}}" />

            <Button Content="Save the bird"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding}"
                    Style="{StaticResource AddBirdButton}" />
        </StackPanel>
    </Border>
</UserControl>

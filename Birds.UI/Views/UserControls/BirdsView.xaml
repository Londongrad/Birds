<UserControl x:Class="Birds.UI.Views.UserControls.BirdsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:Birds.UI.ViewModels" 
             xmlns:enums="clr-namespace:Birds.Domain.Enums;assembly=Birds.Domain"
             xmlns:domain="clr-namespace:Birds.Domain.Entities;assembly=Birds.Domain"
             xmlns:rep="clr-namespace:Birds.UI.Views.Extensions"
             d:DataContext="{d:DesignInstance Type=viewmodels:BirdListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Visible"
              HorizontalScrollBarVisibility="Hidden"
              Focusable="False">

        <StackPanel>

            <StackPanel>
                <TextBlock Text="{Binding BirdsView.Count, 
                                          StringFormat=Всего птиц: {0}}"
                       Margin="0 0 0 20"
                       Foreground="White"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

                <!--<ComboBox />-->

                <!--<Button    Content="Show only"
                       Command="{Binding ShowOnlyCommand,
                                         Mode=OneWay, 
                                         Source={StaticResource mainVM}}"
                       Style="{StaticResource AddBirdButton}" />-->

            </StackPanel>

            <ItemsControl ItemsSource="{Binding BirdsView}"
                          Margin="0 0 0 0">
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type domain:Bird}">
                        <rep:Bird Name="{x:Static enums:BirdsName.Воробей}" 
                                  IsAlive="False" />
                        <rep:Bird Name="{x:Static enums:BirdsName.Амадин}"    
                                  IsAlive="True"  
                                  Description="Умная птица" />
                        <rep:Bird Name="{x:Static enums:BirdsName.Большак}"    
                                  IsAlive="True"  />
                        <rep:Bird Name="{x:Static enums:BirdsName.Гайка}"   
                                  IsAlive="True"  />
                    </x:Array>
                </d:ItemsControl.ItemsSource>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type rep:Bird}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="40 10 30 30">

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                       Text="{Binding Name}" />

                            <TextBlock Text="{Binding Description}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock"
                                           BasedOn="{StaticResource TextBlockOnBirdsStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Description}"
                                                         Value="">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                   Text="{Binding Arrival, ConverterCulture=ru-ru}" />

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                   Text="⚊" />

                            <TextBlock Style="{DynamicResource TextBlockOnBirdsStyle}"
                                   Text="{Binding Departure, ConverterCulture=ru-ru}" />

                            <!--<StackPanel Margin="0 0 10 0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}"
                                                         Value="False">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                --><!--<Button Style="{DynamicResource DeleteButtonStyle}" 
                                    Content="Удалить"
                                    Command="{Binding DeleteBirdCommand, 
                                                      Mode=OneWay, 
                                                      Source={StaticResource mainVM}}"
                                    CommandParameter="{Binding}">
                                </Button>

                                <TextBox Style="{DynamicResource TextBoxBirdsStyle}"
                                     Text="{Binding Departure,
                                                    ConverterCulture=ru-ru,
                                                    Source={StaticResource mainVM}}" />--><!--

                            </StackPanel>-->
                            <!--<Button Style="{DynamicResource DeleteButtonStyle}" 
                                Command="{Binding RemoveBirdCommand, 
                                                  Mode=OneWay, 
                                                  Source={StaticResource mainVM}}"
                                CommandParameter="{Binding}"
                                Height="{Binding ActualWidth,
                                                 Mode=OneWay,
                                                 RelativeSource={RelativeSource Self}}">
                                <Image VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Source="/wwwroot/Images/file_basket_red.png"
                                   Width="30" />
                            </Button>-->

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>

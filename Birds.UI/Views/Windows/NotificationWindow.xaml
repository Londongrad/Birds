<Window
    x:Class="Birds.UI.Views.Windows.NotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Birds.UI.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NotificationWindow"
    MaxWidth="300"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="RootBorder"
        Padding="10"
        Background="#333"
        CornerRadius="8"
        MouseDown="OnClickClose"
        Opacity="0.9">
        <StackPanel
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                x:Name="IconImage"
                Width="16"
                Height="16"
                Margin="0,0,6,0" />
            <TextBlock
                x:Name="MessageText"
                MaxWidth="250"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="White"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
